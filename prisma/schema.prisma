
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  password      String
  expoPushToken String?  // para push notifications
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isVerified   Boolean  @default(false)
  otpCode      String?  // para verificar email
  otpExpiry    DateTime? // para verificar email
  refreshToken String?
  refreshTokenExpiry DateTime?
}